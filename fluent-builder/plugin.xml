<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
	     point="org.eclipse.ui.commands">
         <command 
	         id="repository.fluentBuilder"
	         name="Fluent Builder"
	     />
	</extension>

	<extension
	    point="org.eclipse.ui.handlers">
	    <handler
	          commandId="repository.fluentBuilder"
	          class="repository.fluentBuilder.FluentBuilderHandler">
	    </handler>
    </extension>

	<extension
	      point="org.eclipse.ui.menus">
		<menuContribution
        allPopups="true"
        locationURI="popup:org.eclipse.jdt.ui.source.menu?after=additions">
        	<separator
               name="mySeparator"
               visible="true">
        	</separator>
        	<command
               commandId="br.gov.planejamento.sof.siop.fluentBuilder"
               style="push">
				<visibleWhen>
					<or>
						<with
		                     variable="activeMenuSelection">
							<iterate>
								<or>
									<adapt type="org.eclipse.jdt.core.ICompilationUnit"/>
								</or>
							</iterate>
						</with>
						<with variable="activeEditorId">
						      <equals value="org.eclipse.jdt.ui.CompilationUnitEditor" />
						</with>
					</or>
				</visibleWhen>
        	</command>
            <separator
                  name="additions"
                  visible="false">
            </separator>
		</menuContribution>
	</extension>
</plugin>
