<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
     http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

	<persistence-unit name="repository">
	
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>repositoryTest.Person</class>
		
		<properties>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://TSBD04/siop_testes_diario" />
			<property name="hibernate.connection.username" value="marcosco" />
			<property name="hibernate.connection.password" value="marcosco" />
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
		    
		</properties>

	</persistence-unit>
</persistence>